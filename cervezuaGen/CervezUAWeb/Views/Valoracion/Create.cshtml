@model CervezUAWeb.Models.ValoracionViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Opina sobre el producto:</h2>
<small class="text-muted">(Solo puedes realizar una opinión por producto)</small>
<form action="/Valoracion/Create/" method="post" class="form-control">
    <div class="form-group">
        <p style="display: none">
            Articulo:
            <input type="text" name="articulo" value="@Model.Articulo" class="form-control"/>
        </p>
        <p style="display: none">
            Usuario:
            <input type="text" name="usuario" value="@Model.Usuario" class="form-control"/>
        </p>
        <p>
            Valoración:
            
            <select name="valoracion" class="form-control">
                <option value="0">0</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
        </p>
        <p>
            Texto:
            <input type="text" name="texto" value="" class="form-control"/>
        </p>

    </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear" class="btn btn-default" />
            </div>
        </div>


</form>


