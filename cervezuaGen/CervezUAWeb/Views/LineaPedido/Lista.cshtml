@model IEnumerable<CervezUAWeb.Models.CervezaViewModel>

@{
    ViewBag.Title = "Lista";
}


<div class="container">
    <h2>Detalles Pedido: </h2>


    <table class="table">
        <tr>
            <th>Cerveza</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Importe</th>

        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td><img src="@item.Imagen" style="width: 50px; height: 60px;" /></td>
            <td>@item.Nombre</td>
            <td>@item.Descripcion</td>
            <td>@item.Precio.00€</td>

        </tr>
        }



    </table>
</div>>



