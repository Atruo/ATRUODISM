@model IEnumerable<CervezUAWeb.Models.CervezaViewModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Carrito</title>
    <!-- Bootstrap core CSS -->
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="css/1-col-portfolio.css" rel="stylesheet">
</head>
<body>

    <!-- Page Content -->
    <div class="container">
        <!-- Page Heading -->
        <h1 class="my-4">
            Tu Cesta:

        </h1>
        <!-- Items -->
        @foreach (var item in Model)
        {
            <div class="row">
                <div class="col-md-7">
                    <a href="#">
                        <img class="img-fluid rounded mb-3 mb-md-0" src="@Html.DisplayFor(modelItem => item.Imagen)" alt="">
                    </a>
                </div>
                <div class="col-md-5">
                    <h3>@Html.DisplayFor(modelItem => item.Nombre)</h3>
                    <p>@Html.DisplayFor(modelItem => item.Descripcion)</p>
                    <a class="btn btn-primary" href="#">Eliminar</a>
                </div>
            </div>
        }
        <!-- /.row -->
        <hr>



    </div>
    <!-- /.container -->
    <!-- Bootstrap core JavaScript -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>



