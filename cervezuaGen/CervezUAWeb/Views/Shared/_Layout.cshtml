<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CervezUA</title>
    @Styles.Render("~/vendor/bootstrap/css/bootstrap.min.css")
    @Styles.Render("~/css/shop-homepage.css")
    @Scripts.Render("~/bundles/modernizr")
    <!-- Bootstrap core CSS -->
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="css/shop-homepage.css" rel="stylesheet">


</head>
<body>
    <!-- Barra de navegacion-->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top" style="background-color: #FF6D3A;">
        <div class="container">
            <a class="navbar-brand" href="/">CervezUA</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                
                <ul class="navbar-nav ml-auto">
                    <style>
                        ::placeholder { /* Chrome, Firefox, Opera, Safari 10.1+ */
                            color: white;
                            opacity: 1; /* Firefox */
                        }
                    </style>
                    <li class="nav-item active">
                        <input type="text" name="name" id="buscar" value="" placeholder="Buscar.." class="nav-link" style="background-color: #FF6D3A;  color: white; border-top: 1px; border-right: 1px; border-left: 1px;">


                    </li>
                    <li class="nav-item active">
                        <a class="nav-link">
                            @if (HttpContext.Current.Request.Url.AbsolutePath.ToLower().Contains("cerveza"))
                            {
                                <img src="https://i.ibb.co/Fs7r2k9/image.png" alt="Search" onclick="buscar();" style="cursor: pointer;  margin-right: 1em; " />

                            }
                            else
                            {
                                <img src="https://i.ibb.co/Fs7r2k9/image.png" alt="Search" onclick="cambio();" style="cursor: pointer;  margin-right: 1em; " />

                            }
                        </a>
                        <script>
                            function cambio() {

                                var data = document.getElementById("buscar").value;

                                window.location.href = '/Cerveza/Buscar?data='+data;
                            }
                        </script>
                    </li>

                    <li class="nav-item active">
                        <a class="nav-link" href="/">
                            Home
                            <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Cerveza">Tienda</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="~/Home/Nosotros">Nosotros</a>
                    </li>
                    @Html.Partial("_LoginPartial")


                </ul>
                
            </div>
        </div>
    </nav>
   
 
        @RenderBody()
   
        <hr />
        <!-- Footer -->
        <footer style="background-color: #FF6D3A; padding: 1.5em; width: 100%;">
            <div class="container">
                <p class="m-0 text-center text-white">Copyright &copy; CervezUA 2018</p>
            </div>
            <!-- /.container -->
        </footer>
  

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
